                                    </div>
                                </div>
                                <div class="setting-wrapper row">
                                    <div class="setting-item col-md-6 col-sm-6 col-xs-12">
                                        <label for="features-fixed-footer">
                                            {{ environment.translate('Fixed Footer') }}
